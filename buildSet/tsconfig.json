    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "lib": ["ES2015"],
    "module": "System",  // commonjs
    "noImplicitReturns": true,
    "strict": true
  },
//  "files": [
//    "../host/src/app/System.ts"
//  ],
  "include": [
    //"../host/src"
    "../host/src/app/System.ts"
  ],
  "exclude": [
    "*/interfaces/*",
    "node_modules"
  ]
}
