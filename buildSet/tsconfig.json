{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    //"checkJs": true,
    //"listEmittedFiles": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    //"extendedDiagnostics": true,
    //"importHelpers": true,

    //"skipLibCheck": true,

    "lib": ["ES2015"],
    "module": "system",  // commonjs
    "moduleResolution": "node",  // Classic
    "noEmitOnError": false,
    "noImplicitReturns": true,
    //"noUnusedLocals": true,
    //"outFile": "./build/solid/result.js",
    "outDir": "./build/solid/ts",
    //"preserveSymlinks": true,
    "removeComments": true,
    "sourceMap": false,
    // for jsons
    //"resolveJsonModule": true,
    "rootDir": "../host",
    "strict": true,
    "target": "ES6"
  },
  "files": [
    "../host/src/app/System.ts"
  ],
//  "include": [
//    //"../host/src"
//    "../host/src/app/System.ts"
//  ],
  "exclude": [
    "configWorks/*",
    "../configWorks/**/*",
    "../platforms",
    "node_modules"
  ]
}
