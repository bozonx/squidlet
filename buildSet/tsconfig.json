{
  "compilerOptions": {
    "declaration": false,

    //"importHelpers": true,
    //"noLib": true,


    // only listed module
    //"noResolve": true,

    //"noUnusedLocals": true,
    "outFile": "./build/solid/result.js",
    //"outDir": "./build/solid/ts",
    //"preserveSymlinks": true,
    // for jsons
    //"resolveJsonModule": true,
    "rootDir": "../host",
    "target": "ES6",
    "sourceMap": false,
    "removeComments": true,

    "noEmitOnError": false,
    "allowJs": true,
