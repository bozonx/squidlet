{
  "compilerOptions": {

//    "listEmittedFiles": true,
//    "listFiles": true,

    "allowSyntheticDefaultImports": true,


    //"importHelpers": true,
    //"noLib": true,

    //"isolatedModules": false,

//    "baseUrl": ".",
//    "paths": {
//      "es6-promise": ["node_modules/es6-promise"]
//    },

    // only listed module
    //"noResolve": true,

    //"rootDir": "../host/src",





    // makes helper __importDefault
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": false,
    "sourceMap": false,
    "noEmitOnError": false,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    //"emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "lib": ["ES2018"],
    "target": "ES2018",
    "module": "commonjs",
    //"module": "esnext",

    // this is for turning off "use strict"
    "noImplicitUseStrict": true,
    "alwaysStrict": false,
    // turn off strict
    "strict": false,
    "noImplicitReturns": false
  }
}
