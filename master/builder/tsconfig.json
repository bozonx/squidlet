{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "listEmittedFiles": true,
    //"lib": ["ES5"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    //"noUnusedLocals": true,
    //"outFile": "build/result.js",
    "outDir": "build",
    "preserveSymlinks": true,
    "removeComments": true,
    // for jsons
    //"resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "target": "es5"
  },
  "exclude": ["build", "node_modules"]
//  "include": [
//    "src/**/*"
//  ]
}
