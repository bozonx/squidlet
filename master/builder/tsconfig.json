{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "listEmittedFiles": true,
    //"lib": ["ES5"],
    "module": "system",
    //"moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "outFile": "build/result.js",
    "removeComments": true,
    // for jsons
