{
  "compilerOptions": {
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitReturns": true,
    "preserveSymlinks": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "target": "es5"
  },
  "exclude": ["build", "node_modules"]
}
